<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KayitOlActivity">

    <TextView
        android:id="@+id/isimText"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="İsim"
        app:layout_constraintEnd_toStartOf="@+id/isimEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/soyIsımText"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:text="Soy isim"
        app:layout_constraintEnd_toStartOf="@+id/soyisimEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/isimText" />

    <TextView
        android:id="@+id/mailText"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:text="E-mail"
        app:layout_constraintEnd_toStartOf="@+id/mailEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/soyIsımText" />

    <EditText
        android:id="@+id/isimEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="Sedef"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/soyisimEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="Yılmaz"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/isimEdit" />

    <EditText
        android:id="@+id/mailEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="example@example.com"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/soyisimEdit" />

    <EditText
        android:id="@+id/sifreEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="min 8 karakterli"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mailEdit"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/kaydetButon"
        android:layout_width="138dp"
        android:layout_height="48dp"
        android:onClick="kayit"
        android:text="KAYDET"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.886"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.454" />

    <TextView
        android:id="@+id/sifreText"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:text="Şifre"
        app:layout_constraintEnd_toStartOf="@+id/sifreEdit"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mailText" />
</androidx.constraintlayout.widget.ConstraintLayout>